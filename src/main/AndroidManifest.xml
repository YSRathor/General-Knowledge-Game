<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.generalknowledgegame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:resizeableActivity="false"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">

        <service
            android:name=".data.GameSoundService"
            android:enabled="true"
            android:exported="true"
            tools:ignore="ExportedService" />
        <service
            android:name=".data.MenuSoundService"
            android:enabled="true"
            android:exported="true"
            tools:ignore="ExportedService" />

        <activity android:name=".view.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.SettingsScreen" />
        <activity android:name=".view.RecordsScreen" />
        <activity android:name=".view.DifficultySettingScreen" />
        <activity android:name=".view.GameOverScreen" />
        <activity android:name=".view.GameScreen" />
        <activity android:name=".view.AboutScreen" />
        <activity android:name=".view.InstructionsScreen" />
        <activity android:name=".view.HomeScreen" />
    </application>

</manifest>